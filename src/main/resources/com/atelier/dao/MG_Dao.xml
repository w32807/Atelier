<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.atelier.dao.MG_Dao">

	<select id="getList" resultType="com.atelier.dto.MG_Dto"
		parameterType="Integer">
		<![CDATA[
		SELECT * FROM MESSAGE WHERE MG_NUM>=#{pageNum}*10-9 AND MG_NUM<=#{pageNum}*10
		]]>
	</select>

	<select id="getBoardCount" resultType="Integer">
		SELECT COUNT(*) FROM
		MESSAGE
	</select>


	<select id="getMessage" resultType="com.atelier.dto.MG_Dto">
		SELECT * FROM MESSAGE WHERE
		MG_NUM=#{mg_num}
	</select>

	

	<insert id="SendMessage" parameterType="com.atelier.dto.MG_Dto" useGeneratedKeys="true" keyProperty="mg_num">
		
		<selectKey keyProperty="mg_num" resultType="int" order="BEFORE">
			SELECT MG_NUM_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		
		INSERT INTO B VALUES(${mg_num},#{mg_sender},#{mg_receiver},DEFAULT,#{mg_contents},DEFAULT)
	</insert>
</mapper>